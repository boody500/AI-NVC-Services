{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": true
        },
        {
            "name": "Python Debugger: Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A", "tasks", // Replace 'app' with the name of the file where your Celery instance is defined
                "worker",
                "--loglevel=info",
                "--pool=thread" // Mandatory for Windows users to prevent hanging
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Flask + Celery",
            "configurations": [
                "Python Debugger: Flask",
                "Python Debugger: Celery Worker"
            ],
            "stopAll": true
        }
    ]
}