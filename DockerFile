FROM python:3.10-slim

# Install system deps (ffmpeg is required for whisper)
RUN apt-get update && apt-get install -y ffmpeg git && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy requirements first (so layers are cached)
COPY requirements.txt .

# Install dependencies (including torch + faster-whisper)
RUN pip install --no-cache-dir -r requirements.txt

# Copy rest of the app
COPY . .

# Expose Flask port
EXPOSE 5000

# Run your app
CMD ["python", "app.py"]
